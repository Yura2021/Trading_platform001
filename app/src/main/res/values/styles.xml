<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="MyAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
    <style name="BottomNavigation.ActiveItemTextAppearance" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:textStyle">bold</item>
        <item name="android:color">@color/green</item>
        <item name="android:itemBackground">@color/green</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:backgroundTint">@color/green</item>
    </style>
    <style name="MainButtonStyle">
        <item name="android:layout_width">@dimen/main_button_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/main_padding_button</item>
        <item name="android:textSize">@dimen/main_button_textSize</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.Theme.Trading_platform001.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
</resources>
