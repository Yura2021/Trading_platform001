<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/layout_view_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layout_bottom_bar"
        android:orientation="vertical"
        android:padding="@dimen/main_padding_button">
<ListView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

</ListView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/border_main_menu"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/main_padding_button"
        android:weightSum="4">

        <Button
            android:id="@+id/button1"
            android:layout_width="@dimen/main_button_width"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/main_margin_button"
            android:layout_weight="1"
            android:background="@color/black"
            android:gravity="center"
            android:padding="@dimen/main_padding_button"
            android:text="@string/main_button_name_main"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button2"
            android:layout_width="@dimen/main_button_width"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/black"
            android:padding="@dimen/main_padding_button"
            android:layout_marginStart="@dimen/main_margin_button"
            android:text="@string/main_button_name_catalogue"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/button3"
            android:layout_width="@dimen/main_button_width"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/black"
            android:padding="@dimen/main_padding_button"
            android:layout_marginStart="@dimen/main_margin_button"
            android:text="@string/main_button_name_basket"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button4"
            android:layout_width="@dimen/main_button_width"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/black"
            android:padding="@dimen/main_padding_button"
            android:layout_marginStart="@dimen/main_margin_button"
            android:layout_marginEnd="@dimen/main_margin_button"
            android:text="@string/main_button_name_user"
            android:textColor="@color/white"
            android:textSize="@dimen/main_button_textSize" />

    </LinearLayout>
</RelativeLayout>